{
    "name": "@sidaroth/kit",
    "version": "0.0.0-monorepo",
    "description": "A lightweight, high-performance kit for rendering, simulation, and physics applications.",
    "publishConfig": {
        "registry": "https://npm.pkg.github.com/"
    },
    "author": "Christian Holt <sidaroth>",
    "license": "MIT",
    "type": "module",
    "private": true,
    "scripts": {
        "format": "prettier --write \"packages/**/*.ts\"",
        "build": "pnpm -r build",
        "dev": "pnpm -r dev",
        "test": "pnpm -r test",
        "lint": "pnpm -r lint",
        "test:watch": "pnpm -r test:watch",
        "check": "pnpm -r check",
        "bench": "pnpm -r bench",
        "coverage": "pnpm -r coverage",
        "coverage:core": "pnpm -C packages/core coverage",
        "coverage:math": "pnpm -C packages/math coverage",
        "bump": "lerna version",
        "release": "lerna publish from-package --yes",
        "test:core": "pnpm -C packages/core test",
        "test:math": "pnpm -C packages/math test",
        "lint:core": "pnpm -C packages/core lint",
        "lint:math": "pnpm -C packages/math lint",
        "check:core": "pnpm -C packages/core check",
        "check:math": "pnpm -C packages/math check",
        "bench:core": "pnpm -C packages/core bench",
        "bench:math": "pnpm -C packages/math bench"
    },
    "devDependencies": {
        "@types/node": "24.10.1",
        "@vitest/coverage-v8": "^4.0.8",
        "lerna": "9.0.0",
        "oxlint": "1.28.0",
        "prettier": "3.6.2",
        "tsup": "8.5.0",
        "typescript": "5.9.3",
        "vitest": "4.0.8"
    },
    "repository": {
        "type": "git",
        "url": "https://github.com/sidaroth/kit.git"
    },
    "engines": {
        "node": ">=18"
    }
}